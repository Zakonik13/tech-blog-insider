<article class="post">
    <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        <span>({{format_url post_url}})</span>
    </div>
    <div class="info">
        {{vote_count}} point(s) by {{user.username}} on
        {{format_date created_at}}|
        <a href="/post/{{id}}">{{comments.length}} comments</a>
    </div>
</article>